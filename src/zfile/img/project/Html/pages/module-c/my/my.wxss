.msg {
    padding: 18rpx 28rpx 9rpx;
    box-sizing: border-box;
    width: 100%;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.msg .left {
    flex: 1 1 auto;
}

.msg .left .item {
    font-size: 33rpx;
    font-weight: 500;
    line-height: 31rpx;
    color: #000;
    margin-bottom: 24rpx;
}

.msg .right {
    flex: 0 0 auto;
    font-size: 33rpx;
}

.msg .right text {
    font-size: 50rpx;
    padding: 0 20rpx;
    color: #FE8417;
}

.menu {
    width: 100%;
    background-color: #fff;
}

.menu .menu-item {
    display: flex;
    height: 90rpx;
    box-sizing: border-box;
    align-items: center;
    font-size: 33rpx;
    color: #000;
    border-top: 1rpx solid #E1E1E1;
    padding: 0 28rpx 0 36rpx;
}

.menu .menu-item image {
    width: 42rpx;
    height: 42rpx;
    margin-right: 28rpx;
}

.menu .menu-item .menu-name {
    flex: 1 1 auto;
}

.menu .menu-item .angle {
    border-color: #FFB147;
}

.share-content {
    padding-top: 60rpx;
    box-sizing: border-box;
    position: relative;
}

.share-content image {
    display: block;
    margin: 0 auto;
}

.share-content .big {
    width: 413rpx;
    height: 403rpx;
    margin-bottom: 25rpx;
}

.share-content .small {
    width: 229rpx;
    height: 229rpx;
}

.share-content view {
    position: fixed;
    font-size: 36rpx;
    line-height: 36rpx;
    bottom: -72rpx;
    width: 100%;
    text-align: center;
    color: #fff;
    font-weight: bold;
}
