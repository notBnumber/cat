<view class="container">
	<swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000"
	        indicator-color="#FFB147" indicator-active-color="#FE8417" circular="{{true}}">
		<swiper-item wx:for="{{info.store_imgs}}" wx:key="{{item.id}}">
			<image mode="scaleToFill" class="banner" src="{{item.url}}"></image>
		</swiper-item>
	</swiper>

	<view class="info">
		<view class="hospital">
			<view class="left">
				<view class="name">{{info.store_name}}</view>
				<view class="addr">
					<text class="addr-text">{{info.address_detail}}</text>
					<image mode="widthFix" class="addr-img" src="../../../imgs/address.png" bindtap="openMap"></image>
				</view>
				<view class="others">医院介绍：{{info.desc}}</view>
				<view class="others">医院特色：{{info.ts_name}}</view>
				<view class="others">总下单量：{{info.buy_num}}</view>
			</view>
			<navigator hover-class="none" url="/pages/module-c/edit-hospital/edit-hospital?edit=1">
				<image class="right" src="../../../imgs/edit.png"></image>
			</navigator>
		</view>
		<view class="doctor">
			<view class="title-box">
				<text class="title">医院人数：{{info.scope}}</text>
				<navigator hover-class="none" url="/pages/module-c/edit-doctor/edit-doctor">
					<view class="btn">新增</view>
				</navigator>
			</view>

			<view class="table">
				<view class="tr">
					<view class="th">姓名</view>
					<view class="th">职位</view>
					<view class="th">手机号</view>
					<view class="th">操作</view>
				</view>
				<block wx:for="{{doctorList}}" wx:key="{{index}}">
					<view class="tr">
						<view class="td">{{item.name}}</view>
					<view class="td">{{item.position_name}}</view>
					<view class="td">{{item.phone}}</view>
					<view class="td">
						<navigator hover-class="none"
								   url="/pages/module-c/edit-doctor/edit-doctor?index={{index}}">
							<image mode="widthFix" src="../../../imgs/module-c/edit-black.png" class="edit-img"></image>
						</navigator>
					</view>
			</view>
				</block>
			</view>

		</view>
	</view>

</view>
