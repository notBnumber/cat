.container {
  min-height: 100vh;
  position: relative;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 30rpx;
}

.discount-box {
  margin: 30rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.discount-box .discount-in-box {
  width: calc(100% - 40rpx);
  height: 200rpx;
  margin: 20rpx;
  border-radius: 15rpx;
  border: 3rpx dotted #fff;
  display: flex;
  justify-content: flex-start;
}
.discount-box .discount-in-box .left {
  margin: 10rpx 40rpx 0 20rpx;
}
.discount-box .discount-in-box .left .name {
  width: 460rpx;
  font-size: 36rpx;
}
.discount-box .discount-in-box .left .tips-box {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 20rpx 0;
}
.discount-box .discount-in-box .left .tips-head {
  width: 120rpx;
  display: inline-block;
}
.discount-box .discount-in-box .left .tips-info {
  width: 310rpx;
  display: inline-block;
}

.discount-box .discount-in-box .right {
  font-size: 40rpx;
  margin: 30rpx 0;
  border-left: #fff 1rpx solid;
  display: flex;
  justify-content: center;
  align-items: center;
}
.discount-box .discount-in-box .right .text {
  margin-left: 32rpx;
}

.sweep-res-box {
  font-size: 32rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.sweep-res-box .sweep-info-box {
  width: calc(100% - 40rpx);
  height: 200rpx;
  margin: 20rpx;
}
.sweep-res-box .sweep-info-box .com {
  margin-bottom: 10rpx;
}

.sweep-res-box .product-box {
  margin-top: 40rpx;
  padding: 15rpx;
  border-top: #8c8c8c 1rpx solid;
  display: flex;
}
.sweep-res-box .product-box .banner {
  width: 200rpx;
  height: 180rpx;
}
.sweep-res-box .product-box .info {
  margin-left: 20rpx;
  width: 360rpx;
}
.sweep-res-box .product-box .nums {
  font-size: 40rpx;
  display: flex;
  align-items: flex-end;
}

.no-res-box {
  width: 100%;
  height: 100vh;
  text-align: center;
  line-height: 80vh;
  font-size: 30rpx;
}
.no-res-box .text {
  display: inline-block;
}
.no-res-box .navigator {
  display: inline-block;
}

.popLayer {
  width: 100%;
  min-height: 100vh;
  background-color: #B3B3B3;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;
  -moz-opacity: 0.8;
  opacity:.80;
  filter: alpha(opacity=80);/* 只支持IE6、7、8、9 */
}
.popBox {
  background-color: #FFFFFF;
  z-index: 11;
  width: 640rpx;
  height: 380rpx;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  border-radius: 20rpx;
}
.popBox .content-box {
  margin: 20rpx;
}
.popBox .content-box .title {
  width: 100%;
  margin: 0;
  text-align: center;
}
.popBox .content-box .detail-box {
  display: flex;

}
.popBox .content-box .pic {
  width: 230rpx;
  height: 180rpx;
}
.popBox .content-box .info {
  width: 370rpx;
}
.popBox .content-box .info .name {
  margin: 10rpx;
  font-size: 30rpx;
}
.popBox .content-box .info .nums {
  font-size: 30rpx;
  display: flex;
  flex-direction: row-reverse;
  margin: 10rpx;
}
.popBox .btn-box {
  margin-top: 20rpx;
}
.popBox .btn-box .btn {
  font-size: 30rpx;
  display: inline-block;
  color: #fff;
  width: calc(100% - 350rpx);
  margin-left: 20rpx;
}
