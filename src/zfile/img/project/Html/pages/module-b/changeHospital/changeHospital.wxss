.container {
  background-color: #f3f4f6;
  min-height: 100vh;
}
.items {
  height: 200rpx;
  margin: 20rpx;
  background-color: #fff;
  border: 1rpx solid #fff;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.items .item-img {
  width: 200rpx;
  height: 150rpx;
  margin: 20rpx 20rpx;
  border: 1rpx solid #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.items .item-info {
  width: 390rpx;
  display: inline-block;
  position: absolute;
  top: 0;
  left: 240rpx;
  display: flex;
  flex-direction: column;
}

.items .item-info .item-name {
  width: 100%;
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 30rpx;
}

.items .item-info .item-addr {
  width: 100%;
  height: 30rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  display:flex;
  align-items: center;
}
.items .item-info .item-addr .item-addr-text {
  max-width: 91%;
  color: #8c8c8c;
  font-size: 22rpx;
  display: inline-block;
}
.items .item-info .item-addr .item-addr-img {
  width: 20rpx;
  height: 28rpx;
  margin-left: 6rpx;
  display: inline-block;
}
.items .item-distance {
  font-size: 25rpx;
  color: #8c8c8c;
  position: absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -20rpx;
}