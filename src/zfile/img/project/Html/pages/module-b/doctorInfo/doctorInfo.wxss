.container {
  min-height: 100vh;
  background-color: #f3f4f6;
}
.swiper {
  width: 100%;
  height: 421rpx;
  background-color: #fff;
}
.swiper .banner {
  width: 100%;
  height: 421rpx;
}

.info {
  border: 1rpx solid #fff;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 40rpx 20rpx;
  box-shadow:0px 0px 20px #d4d4d8;
  font-size: 30rpx;
}

.info .hospital {
  margin: 20rpx;
}

.info .hospital .name {
  font-size: 40rpx;
  font-weight: 700;
  margin: 20rpx 0;

}

.info .hospital .addr {
  margin: 20rpx 0;
}

.info .hospital .addr .addr-text {
  margin-right: 10rpx;
}

.info .hospital .addr .addr-img {
  width: 20rpx;
  height: 28rpx;
}

.info .hospital .others {
  display: inline-block;
  width: calc(100% - 170px);
  margin-top: 10rpx;
}

.info .hospital .others-2 {
  margin-top: 10rpx;
}

.info .doctor {
  margin: 20rpx;
}

.info .doctor .title-box {
  height: 50rpx;
  position: relative;
  font-size: 35rpx;
  font-weight: 700;
}

.info .doctor .title-box .title {
  display: inline-block;
  position: absolute;
  left: 0;
  top: 0
}

.info .doctor .title-box .btn {
  display: inline-block;
  position: absolute;
  right: 0;
  top: 0;
}

.info .doctor .edit-img {
  width: 30rpx;
  height: 30rpx;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 50rpx;
}
.th {
  width: 40%;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 700;
}
.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}
