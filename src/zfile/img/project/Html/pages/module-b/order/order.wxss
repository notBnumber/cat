view {
  overflow: visible;
}

.container {
  min-height: 100vh;
  background-color: #fff;
  border-top: 1rpx solid #8c8c8c;
}

.detail-box {
  margin: 5vw;
}

.detail-box .head-box .hospital-name {
  font-size: 40rpx;
  font-weight: 700;
}

.detail-box .head-box .agent-info {
  margin: 20rpx 0;
}

.detail-box .head-box .com {
  display: inline-block;
  font-size: 30rpx;
  width: 50%;
}

.items-box {
  padding: 20rpx 0;
  border-top: 1rpx solid #8c8c8c;
}

.items-box .swiper,.items-box .swiper-item{
  width: 90vw;
  height: 50vw;
}

.items-box .slide-image {
  margin: 30rpx 0;
  width: 90vw;
  height: 45vw;
  border-radius: 2vw;
}

.items-box .item-name {
  font-size: 35rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  height: 96rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;/* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis;/* IE 专有属性,当对象内文本溢出时显示省略标记(...) ;需与overflow:hidden;一起使用。*/
}

.items-box .item-num-box {
  font-size: 40rpx;
  margin-bottom: 20rpx;
  float: right;
}

.items-box .item-num-box .com {
  display: inline-block;
  line-height: 40rpx;
  vertical-align: middle;
}

.items-box .item-num-box .icon {
  border: 1rpx solid #949494;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
}

.items-box .item-num-box .nums {
  margin: 0 30rpx;
}

.items-box .btn {
  display: inline-block;
  width: 180rpx;
  height: 50rpx;
  font-size: 40rpx;
  line-height: 50rpx;
  color: #fff;
  vertical-align: middle;
  margin-left: 40rpx;
}