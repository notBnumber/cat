.container {
  min-height: 100vh;
}

.box {
  margin: 40rpx;
}

.box .main-box {
  border-radius: 30rpx;
  border: 1rpx solid #fff;
  width: 100%;
  height: 800rpx;
  background-color: #fff;
  overflow: hidden;
}

.box .main-box .name-box {
  text-align: center;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
}

.box .main-box .name {
  display: block;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.box .ranking-box {
  box-sizing: border-box;
  width: 388rpx;
  height: 265rpx;
  padding-top: 46rpx;
  position: relative;
  background-color: #FFD15C;
  border: 20rpx solid #F8B64C;
  margin: 70rpx auto 0;
}

.box .ranking-box .ranking-text {
  width: 100%;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.box .ranking-box .ranking-text .com {
  margin-top: 15rpx;
}

.box .ranking-box .ranking-ico {
  position: absolute;
  z-index: 1;
  width: 100rpx;
  height: 108rpx;
  top: -55rpx;
  left: 50%;
  transform: translateX(-50%);
}

.box .code-box {
  text-align: center;
}

.box .code-box .code {
  width: 200rpx;
  height: 200rpx;
  margin-top: 59rpx;
}

.share {
  font-size: 35rpx;
  color: #fff;
  margin-top: 100rpx;
}
