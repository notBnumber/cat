@import "../../../wxParse/wxParse.wxss";

view {
  overflow: visible;
}

.container {
  min-height: 100vh;
  background-color: #fff;
  margin-bottom: 100rpx;
}

.swiper,.swiper-item,.slide-image{
  width: 100vw;
  height: 50vw;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 30rpx 20rpx;
}
.bom {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.bom-txt {
  margin: 0 25rpx;
  display: inline-block;
}
.num-box {
  display: inline-block;
  margin: 0 40rpx;
}
.num-box .com {
  display: inline-block;
}
.num-box .icon {
  border: 1rpx solid #949494;
  width: 35rpx;
  height: 35rpx;
  text-align: center;
  line-height: 35rpx;
}
.num-box .nums {
  margin: 0 30rpx;
}
.btn {
  display: inline-block;
  width: 220rpx;
  height: 100%;
  line-height: 100rpx;
  color: #fff;
  border-radius: 0;
  position: absolute;
  right: 0;
  top: 0;
}

.desc-wrapper {
  margin: 20rpx 0;
  padding: 0 31rpx;
}