/* pages/module-a/sign-up/sign-up.wxss */

form {
    display: block;
    position: absolute;
    top: 92rpx;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    width: 692rpx;
    padding: 64rpx 53rpx;
    background-color: #fff;
}

form .form-item {
    margin-bottom: 12rpx;
    position: relative;
    border: 1px solid #e3e3e3;
    display: flex;
    align-items: center;
}

form .form-item image {
    width: 46rpx;
    height: 57rpx;
    margin: 0 19rpx 0 14rpx;
}

form .form-item.address {
    border: none;
}

form .form-item.address input {
    border: 1px solid #e3e3e3;
}

form .form-item input {
    width: 100%;
    height: 67rpx;
    padding-left: 10rpx;
    font-size: 29rpx;
}

form .form-item button {
    width: 144rpx;
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 15rpx;
    font-size: 26rpx;
    border: 1px solid #AAAAAA;
    color: #000;
    padding: 0;
}

form .submit-btn {
    margin-top: 20rpx;
    border: none;
    background-color: #FFB147;
    height: 69rpx;
    line-height: 69rpx;
    color: #fff;
    font-size: 36rpx;
}

form .img-list {
    display: flex;
    justify-content: space-between;
    line-height: 149rpx;
    text-align: center;
    color: #A29F9F;
    margin-top: 24rpx;
    margin-bottom: 24rpx;
}

form .img-list .img-item {
    width: 149rpx;
    height: 149rpx;
    border: 1px solid #DEDEDE;
    position: relative;
}

form .img-list .img-item .del {
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    background-color: #FFB147;
    color: #fff;
    line-height: 18rpx;
    text-align: center;
}

form .img-list .img-item image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
