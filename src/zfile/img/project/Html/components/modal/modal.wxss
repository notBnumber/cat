.mask{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    background-color: rgba(0,0,0,0.4);
    z-index: 9999;
}

.modal-content{
    display: flex;
    flex-direction: column;
    top: 40%;
    left: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    width: 558rpx;
    height: 292rpx;
    line-height: 292rpx;
    background-color: #fff;
    text-align: center;
    border-radius: 7rpx;
    font-size: 42rpx;
    color: #000;
}

.modal-btn-wrapper{
    display: flex;
    flex-direction: row;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
}

.cancel-btn{
    border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
    flex: 1;
    height: 100%;
    overflow-y: hidden;
}
